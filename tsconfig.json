{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "./build",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "module": "esnext",
    "target": "es5",
    "moduleResolution": "node",
    "lib": [
      "es5",
      "es6",
      "es7",
      "es2017",
      "dom"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": ["node_modules"]
}